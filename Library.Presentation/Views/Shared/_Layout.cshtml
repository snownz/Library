<html lang="en" class="no-js">
<head>
    <title>Book Store</title>
    <script>
        var baseUrl = "@Url.Content("~/")";
    </script>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <meta content="" name="description" />
    <meta content="" name="author" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css">
    @Styles.Render("~/bundles/global")
    @Styles.Render("~/bundles/css")
    @Styles.Render("~/bundles/tema3")

    <script src="~/Scripts/jquery.min.js" type="text/javascript"></script>
    <link rel="shortcut icon" href="favicon.ico">
</head>
<body>
    <div class="page-header headerCustom">
        @{ Html.RenderPartial("_PluginMenu");}
    </div>
    <div class="row marginCustom page-content">
        @RenderBody()
    </div>
    <div class="page-footer">
        <div class="container-fluid">
            @DateTime.Now.Year &copy; <a href="#">Same</a>. Todos direitos reservados.
        </div>
    </div>
    <div class="modal fade draggable-modal ui-draggable" id="formModal" tabindex="-1" role="basic" aria-hidden="true">
        <div class="modal-dialog  modal-lg">
            <div class="modal-content">
                <div class="modal-header ui-draggable-handle">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Start Dragging Here</h4>
                </div>
                <div class="modal-body" id="modalBody">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-close"></i>  Fechar</button>
                </div>
            </div>
        </div>
    </div>   
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/library")
    @Scripts.Render("~/bundles/morris")
    @Scripts.Render("~/bundles/tema3")
    <script src="~/Scripts/library.js" type="text/javascript"></script>
    <script>
        $(document).ready(function() {
            Metronic.init(); // init metronic core componets
            Layout.init(); // init layout
        });
    </script>
</body>
</html>
