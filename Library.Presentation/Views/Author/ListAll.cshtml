@model Library.Presentation.Models.Pagination.AuthorPagination
@if (!ViewBag.Action)
{
    <div class="portlet-title">
        <div class="caption caption-md">
            <i class="icon-bar-chart theme-font hide"></i>
            <span class="caption-subject theme-font bold uppercase">Autores</span>
            <span class="caption-helper hide">weekly stats...</span>
        </div>
        <div class="inputs">
            <div class="portlet-input input-inline input-small ">
                <div class="input-icon right">
                    <i class="icon-magnifier"></i>
                    <input type="text" name="txtAuthor" data-type="txtList" data-controller="Author" data-container="partial-AuthorList" class="form-control form-control-solid" placeholder="buscar...">
                </div>
            </div>
        </div>
    </div>
    <p>
        <a href="#" data-type="New" data-controller="Author"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp; Incluir</a>
    </p>
}
<div id="partial-AuthorList">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Instance.Name)
            </th>
            <th></th>
        </tr>
        @if (Model != null)
        {
            foreach (var item in Model.Author.Dados)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a href="#" data-type="Update" data-id="@item.Id" data-controller="Author">Editar</a> | 
                        <a href="#" data-type="Delete" data-id="@item.Id" data-controller="Author">Excluir</a>
                    </td>
                </tr>
            }
        }
    </table>
    <hr />
    <div style="float:right">
        <ul class="pagination">
            <li><a href="#" class="item-name primary-link disabled">Page</a></li>
            @foreach (var item in Model.Author.Paginas)
            {
                if (item.HasValue)
                {
                    <li><a href="#" class="item-name primary-link" data-type="pageList" data-controller="Author" data-container="partial-AuthorList" data-search="txtAuthor" data-page="@item.Value">@item.Value</a></li>
                }
                else
                {
                        <li><a href="#">...</a></li>
                }
            }
           <li><span>@Model.Author.Dados.Count Registros de @Model.Author.ColecaoQauntidade</span></li>
        </ul>
    </div>
    <br />
    <br />
</div>

