@model Library.Presentation.Models.Pagination.BookPagination
@{
    ViewBag.Title = "PartialSpecialBooks";
}
@if (!ViewBag.Action)
{
<div class="alert alert-warning">
    <h3>Livros Especiais</h3>
</div>
} 
<div class="row" id="partial-BookSpecialList">
@foreach (var item in Model.Book.Dados)
{
    <div class="col-sm-12 col-md-3">
        <div class="thumbnail">
            <img src="@item.Image" alt="100%x200">
            <div class="caption">
                <h3>@item.Name</h3>
                <p>@item.Description</p>
                <p>
                    <spam class="span"><i class="fa fa-star"></i>&nbsp; @item.Year - @item.Author.Name</spam>
                </p>
            </div>
        </div>
    </div>
}     
</div>
<hr />
<div style="float:right">
    <ul class="pagination">
        <li><a href="#" class="item-name primary-link disabled">Page</a></li>
        @foreach (var item in Model.Book.Paginas)
            {
                if (item.HasValue)
                {
                <li><a href="#" class="item-name primary-link" data-type="pageList" data-action="PartialSpecialBooks" data-controller="Books" data-container="partial-BookSpecialList" data-search="txtBook" data-page="@item.Value">@item.Value</a></li>
            }
            else
            {
                <li><a href="#">...</a></li>
            }
        }
        <li><span>@Model.Book.Dados.Count Registros de @Model.Book.ColecaoQauntidade</span></li>
    </ul>
</div>
<br />
<br />
<script>
    configureBookButons();
</script>